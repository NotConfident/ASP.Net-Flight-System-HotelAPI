                    }*@
                @if (ViewBag.status == "Operational")
                {
                    <input name="Status" type="radio" value="Operational" checked="checked" />
                    <label for="Operational">Operational</label>
                    <input name="Status" type="radio" value="Under Maintenance" />
                    <label for="Under Maintenance">Under Maintenance</label>
                }
                else
                {
                    <input name="Status" type="radio" value="Operational" />
                    <label for="Operational">Operational</label>
                    <input name="Status" type="radio" value="Under Maintenance" checked="checked" />
                    <label for="Under Maintenance">Under Maintenance</label>

                }



            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">

                <input type="submit" value="Save"
                       class="btn btn-primary" />

            </div>
        </div>

        <div>
            <a style="color:black; border-style:solid; border-radius:5px; padding:10px;" asp-controller="AdminActions" asp-action="ViewAircraft">Back to List</a>

        </div>
    </fieldset>
