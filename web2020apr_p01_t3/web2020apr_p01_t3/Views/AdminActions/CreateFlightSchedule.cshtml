@using web2020apr_p01_t3.Models;
@model web2020apr_p01_t3.Models.FlightRouteViewModel

@{
    ViewData["Title"] = "Create Flight Schedule";
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/css/schedulebookingmain.css">
<link rel="stylesheet" href="~/css/table.css" />

<h4 class="PageTitle">Add New Flight Schedule</h4>
<hr />
@if (TempData["DateError"] != null)
{
    <div class="alert alert-danger alert-dismissable ">
        <strong>@TempData["DateError"]</strong>
    </div>
}
@if (TempData["PriceError"] != null)
{
    <div class="alert alert-danger alert-dismissable ">
        <strong>@TempData["PriceError"]</strong>
    </div>
}
@if (TempData["InvalidInput"] != null)
{
    <div class="alert alert-danger alert-dismissable ">
        <strong>@TempData["InvalidInput"]</strong>
    </div>
}
<div class="wrap-contact100">
    <form asp-action="CreateFlightSchedule">
        <fieldset class="FormContent">
            <div class="form-group row">
                <div class="col-sm-9 col-md-5">
                    <label class="col-sm-3 col-form-label">Route ID</label>
                    <select asp-for="RouteID" asp-items="@Model.FlightRouteOptions" class="form-control">
                        <option>Please select one</option>
                    </select>

                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 col-md-5">
                    <label asp-for="FlightNumber" class="col-sm-3 col-form-label"></label>
                    <input asp-for="FlightNumber" class="form-control" placeholder="Enter Flight Number" required />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 col-md-5">
                    <label asp-for="DepartureDateTime" class="col-sm-3 col-form-label"></label>
                    <input type="date" min="2020-01-01" max="2020-12-30" id="DepartureDateTime" asp-for="DepartureDateTime" />
                    <p id="warning" style="color:orange"></p>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-sm-9 col-md-5">
                    <label class="col-sm-3 col-form-label">Departure Time </label>
                    <select asp-for="DepartureHours" id="DepartureHours" name="DepartureHours">
                        <option value="0" selected="selected">0</option>
                        @for (int i = 1; i <= 24; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    &nbsp;:&nbsp;
                    <select asp-for="DepartureMins" id="DepartureMins" name="DepartureMins">
                        <option value="0" selected="selected">0</option>
                        @for (int i = 1; i <= 60; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                    &nbsp;:&nbsp;
                    <select asp-for="DepartureSeconds" id="DepartureSeconds" name="DepartureSeconds">
                        <option value="0" selected="selected">0</option>
                        @for (int i = 1; i <= 60; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 col-md-5">
                    <label asp-for="Economy" class="col-sm-3 col-form-label"></label>
                    <input placeholder="$" asp-for="Economy" class="form-control" required />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 col-md-5">
                    <label asp-for="Business" class="col-sm-3 col-form-label"></label>
                    <input placeholder="$" asp-for="Business" class="form-control" required />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <button type="submit" class="btn btn-primary mb-2">Create</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
