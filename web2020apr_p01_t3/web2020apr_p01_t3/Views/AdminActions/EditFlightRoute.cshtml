@model web2020apr_p01_t3.Models.FlightRoute
@{
    ViewData["Title"] = "Edit Flight Route";
}

<h4 class="PageTitle">Edit Flight Route</h4>
<hr />
<form asp-action="EditFlightRoute">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="RouteID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="RouteID" readonly
                       class="form-control-plaintext" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DepartureCountry"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="DepartureCountry" class="form-control" />
                <span asp-validation-for="DepartureCountry"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DepartureCity"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="DepartureCity" class="form-control" />
                <span asp-validation-for="DepartureCity"
                      class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ArrivalCountry"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="ArrivalCountry" class="form-control" />
                <span asp-validation-for="ArrivalCountry"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ArrivalCity"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="ArrivalCity" class="form-control" />
                <span asp-validation-for="ArrivalCity"
                      class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="FlightDuration"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <select asp-for="FlightDuration" id="FlightDuration" name="FlightDuration">
                    <option value="0" selected="selected">0</option>
                    @for (int i = 1; i <= 24; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <button type="submit" class="btn btn-primary mb-2">Save</button>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </fieldset>
</form>
