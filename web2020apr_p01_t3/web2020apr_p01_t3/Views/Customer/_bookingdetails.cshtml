@model web2020apr_p01_t3.Models.ProfileModel
@*th>Booking ID</th>
    <th>Customer ID</th>
    <th>Schedule ID</th>
    <th>Customer Name</th>
    <th>Passport Number</th>
    <th>Nationality</th>
    <th>Seat Class</th>
    <th>Amount payable</th>
    <th>Remark</th>
    <th>Booking Date</th>*@

@if (Model.details != null)
{
    @foreach (var item in Model.details)
    {
        <div class="booking-info shadow mb-5 rounded col-11 col-lg-10">
            <div class="title">@item.dCountry to @item.aCountry</div>
            <div class="row">
                <div class="col-10 col-lg-4">
                    <div class="row">
                        <p class="col">Country of departure:</p>
                        <p class="col">@item.dCity</p>
                    </div>
                    <div class="row">
                        <p class="col">Destination:</p>
                        <p class="col">@item.destinatiton</p>
                    </div>
                    <div class="row">
                        <p class="col">Time of Departure:</p>
                        <p class="col">@item.dTime</p>
                    </div>
                    <div class="row">
                        <p class="col">Time of arrival:</p>
                        <p class="col">@item.arrival</p>
                    </div>
                    <div class="row">
                        <p class="col">Booking Date:</p>
                        <p class="col">@item.datebooked</p>
                    </div>
                    <div class="row">
                        <p class="col">Flight duration:</p>
                        <p class="col">@item.duration</p>
                    </div>
                </div>
                <div class="col-10 col-lg-4">
                    <div class="row">
                        <p class="col">Name:</p>
                        <p class="col">@item.name</p>
                    </div>
                    <div class="row">
                        <p class="col">Nationality:</p>
                        <p class="col">@item.nationality</p>
                    </div>
                    <div class="row">
                        <p class="col">Passport Number:</p>
                        <p class="col">@item.passport</p>
                    </div>
                    <div class="row">
                        <p class="col">Flight Number:</p>
                        <p class="col">@item.flightNum</p>
                    </div>
                    <div class="row">
                        <p class="col">Seat class:</p>
                        <p class="col">@item.seatClass</p>
                    </div>
                    <div class="row">
                        <p class="col">Price:</p>
                        <p class="col">@item.price</p>
                    </div>
                </div>
                <div class="col-10 col-lg-4">
                    <div class="row">
                        <p class="col">Speical Request:</p>
                    </div>
                    <div class="row">
                        <p class="col">@item.remark</p>
                    </div>
                    <div class="print_btn text-right col-10">
                        <button type="button" class="btn btn-primary">Print</button>
                    </div>
                </div>
            </div>
        </div>
    }

}